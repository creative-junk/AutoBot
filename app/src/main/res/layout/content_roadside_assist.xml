<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.crysoft.me.autobot.RoadsideAssistActivity"
    tools:showIn="@layout/activity_roadside_assist">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/lLWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llToolbar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvWelcomeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which service would you like today?"
            android:textColor="@color/colorPrimary"
            android:textSize="21sp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lLWelcome"
        android:orientation="vertical">

        <LinearLayout
            style="@style/assistBox">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jumpstart" />

            <TextView
                style="@style/assistText"
                android:text="Jump Start" />
        </LinearLayout>

        <LinearLayout
            style="@style/assistBox">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/outoffuel" />

            <TextView
                style="@style/assistText"
                android:text="Out of Fuel" />
        </LinearLayout>
        <LinearLayout
            style="@style/assistBox">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/lockout" />

            <TextView
                style="@style/assistText"
                android:text="Lock Out" />
        </LinearLayout>
        <LinearLayout
            style="@style/assistBox">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/flattire" />

            <TextView
                style="@style/assistText"
                android:text="Flat Tire" />
        </LinearLayout>
        <LinearLayout
            style="@style/assistBox">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/towtruck" />

            <TextView
                style="@style/assistText"
                android:text="Tow" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
